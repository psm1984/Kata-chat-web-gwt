<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
    <g:HTMLPanel>
        <b:Container>
            <b:Navbar>
                <b:Brand>Chat Kata</b:Brand>
            </b:Navbar>

            <b:Hero ui:field="loginPanel">
                <b:Heading size="1">Login</b:Heading>


                <b:Form type="HORIZONTAL">
                    <b:Pagination alignment="centered">
                        <b:Fieldset>
                            <b:ControlGroup>
                                <b:ControlLabel for="input01">Username</b:ControlLabel>
                                <b:Controls>

                                    <b:InputAddOn ui:field="usernameCheck" appendIcon="MINUS">
                                        <b:TextBox ui:field="username" alternateSize="SMALL" placeholder="Username"/>
                                    </b:InputAddOn>

                                </b:Controls>
                                <b:ControlLabel for="input01">Password</b:ControlLabel>
                                <b:Controls>
                                    <b:InputAddOn ui:field="passwordCheck" appendIcon="MINUS">
                                        <b:PasswordTextBox ui:field="password" alternateSize="SMALL"
                                                           placeholder="Passowrd"/>
                                    </b:InputAddOn>
                                </b:Controls>

                                <b:Button ui:field="sendButton" addStyleNames="btn">Log in</b:Button>
                            </b:ControlGroup>
                        </b:Fieldset>
                    </b:Pagination>
                </b:Form>
            </b:Hero>

        </b:Container>


    </g:HTMLPanel>
</ui:UiBinder>