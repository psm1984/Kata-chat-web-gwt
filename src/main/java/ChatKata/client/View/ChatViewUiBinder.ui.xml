<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

    <g:HTMLPanel>
        <b:Container>
            <b:Hero ui:field="chatPanel">
                <b:Heading ui:field="welcomeMessage" size="2"></b:Heading>

                <b:DataGrid ui:field="exampleDataGrid"
                            bordered="true" condensed="false" striped="true"
                            height="300px" width="100%"/>
                <b:WellForm type="INLINE">
                    <b:TextBox ui:field="messageToSend" alternateSize="LARGE" placeholder="Message" width="81%" />
                    <b:Button ui:field="sendButton" addStyleNames="btn" width="15%">Send message</b:Button>
                </b:WellForm>
            </b:Hero>
        </b:Container>
    </g:HTMLPanel>
</ui:UiBinder>

