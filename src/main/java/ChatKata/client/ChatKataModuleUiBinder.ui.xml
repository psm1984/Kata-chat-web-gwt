<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
    <g:HTMLPanel>
        <b:Container>
            <b:Navbar>
                <b:Brand>Chat Kata</b:Brand>
            </b:Navbar>

            <b:Hero>
                <b:Heading size="1">Login</b:Heading>


                    <b:TextBox ui:field="username" alternateSize="SMALL" placeholder="Username"/>

                    <b:PasswordTextBox ui:field="password" alternateSize="SMALL" placeholder="Passowrd"/>

                    <b:Button ui:field="sendButton" addStyleNames="btn">Log in</b:Button>


            </b:Hero>
        </b:Container>
    </g:HTMLPanel>
</ui:UiBinder>